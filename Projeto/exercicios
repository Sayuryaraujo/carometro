//exercicio 6
var n1 = 10;
var n2 = 7;
var n3 = 0;
// 1-4: c, 5-7: b, 8-10: a, 0: reprovado
if((n1+n2+n3)/3>=8){
    console.log ("A");
}
else if((n1+n2+n3)/3<=7){
    console.log("B");
}
else if((n1+n2+n3)/3<=4){
    console.log("C");
}
else {
    console.log("Reprovado");
}
console.log("--------------------------");

//exercicio 7
