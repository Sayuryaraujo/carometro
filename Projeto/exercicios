        console.log(i);
    }
}
console.log("--------------------------");

//exercicio 8]
var numero = 5; 
var fatorial = 1;

for (let i = 1; i <= numero; i++) {
    fatorial = fatorial * i;  
}

console.log("O fatorial é:" ,fatorial)